<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>ユーザー新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%#= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name, "ユーザーネーム" %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
        <% if @user.errors.any? %>
        <span class="text-danger"><%= @user.errors.messages[:name][0] %></span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :email, "電子メール" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
        <% if @user.errors.any? %>
        <span class="text-danger"><%= @user.errors.messages[:email][1] %></span>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <span class="text-danger"><%= @user.errors[:password][-1] %></span><br>
        <span class="text-danger"><%= @user.errors[:password_confirmation][-1] %></span>
        </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        <span class="text-danger"><%= @user.errors[:password_confirmation][-1] %></span>
        <span class="text-danger"><%= @user.errors.inspect %></span>
      </div>


        <%= f.label :image, "プロフィール画像" %><br />
        <%= f.text_field :image, autocomplete: "off", class: "form-control" %>


      <div class="form-group">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
